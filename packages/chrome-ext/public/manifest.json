{
  "manifest_version": 3,
  "name": "ProseMirror DevTools",
  "version": "0.0.1",
  "description": "Run prosemirror-dev-toolkit as Chrome extension",
  "homepage_url": "https://github.com/TeemuKoivisto/prosemirror-dev-toolkit",
  "icons": {
    "16": "prosemirror-16.png",
    "32": "prosemirror-32.png",
    "48": "prosemirror-48.png",
    "128": "prosemirror-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "prosemirror-128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["index.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"],
      "extension_ids": []
    }
  ],
  "externally_connectable": {
    "ids": ["*"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "fontSettings",
    "scripting",
    "storage",
    "unlimitedStorage",
    "webNavigation",
    "activeTab",
    "declarativeNetRequest",
    "browsingData",
    "tabs"
  ],
  "host_permissions": ["file:///*", "http://*/*", "https://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      }
    }
  }
}
